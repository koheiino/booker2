<div class="container px-5">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="error">
      <h3><%= @user.errors.count %> errors prohibited this obj from being saved</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li class="error-message"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="user-name">
    Name
  </div>
  <%= f.text_field :name %>

  <div class="user-edit-image">
    Image
  </div>
  <%= f.file_field :profile_image %>

  <div class="form-body">
    Introduction
  </div>
  <%= f.text_area :introduction %><br>

  <div class="upload">
    <%= f.submit "Update User" %>
  </div>
<% end %>

    </div>
  </div>
</div>