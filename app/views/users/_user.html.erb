<table class="table table-user">
  <h2>User info</h2>
  <thead>
    <tr>
  <% if user.profile_image.attached? %>
    <%= image_tag user.profile_image.variant(resize: "100x100", options: { fill: :fill }) %>
  <% else %>
    <%= image_tag "no_image.jpg" %>
  <% end %>
</tr>

  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th colspan="2">
        <%= link_to edit_user_path(current_user), class:"btn btn-default btn-block border " do %>
        <i class="fas fa-user-cog" style="color: #5f5d5d;"></i>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
      <% end %>
      </th>
    </tr>
  </tbody>
</table>