<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @newbook %>
    </div>
    <div class="col-md-1">
      <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td>
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image.variant(resize: "50x50", options: { fill: :fill }), fallback: "no_image.jpg" %>
            <% else %>
              <%= image_tag "no_image.jpg", width: 50, height: 50 %>
            <% end %>
          </td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>