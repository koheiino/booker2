
<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <table class="table book-index">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.profile_image.variant(resize: "50x50", options: { fill: :fill }), fallback: "no_image.jpg" %>
                <% else %>
                  <%= image_tag "no_image.jpg", width: 50, height: 50 %>
                <% end %>
              </td>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>