
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/error', model: @book %>
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table book-index">
        <h2>Bookss</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                <% if @user.profile_image.attached? %>
                  <%= image_tag @user.profile_image.variant(resize: "50x50", options: { fill: :fill }), fallback: "no_image.jpg"  %>
                <% else %>
                  <%= image_tag "no_image.jpg", width: 50, height: 50 %>
                <% end %>
                <% end %>
              </td>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>